<script src='en/{{ latest }}/build/ol.js'></script>
<script>
  var map = new ol.Map({
    target: 'map',
    renderer: 'canvas',
    view: new ol.View({
      center: [0, 6500000],
      zoom: 2
    }),
    layers: [
      new ol.layer.Tile({
        source: new ol.source.Stamen({
          layer: 'watercolor'
        })
      })
    ]
  });

  var container = document.getElementById('map');
  container.onmouseover = function() {
    container.className = 'over';
  };
  container.onmouseout = function() {
    container.className = '';
  };
</script>
